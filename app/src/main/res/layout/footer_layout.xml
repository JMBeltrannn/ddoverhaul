<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/blista_objetos"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/boton2icon"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="onFooterButtonClick"
        android:background="?android:attr/selectableItemBackground" />


    <ImageButton
        android:id="@+id/bperfil"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/profileicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="onFooterButtonClick" />

    <ImageButton
        android:id="@+id/bmultijugador"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/multiicon"
        android:textSize="20px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.765"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="onFooterButtonClick" />

    <ImageButton
        android:id="@+id/blista_personajes"
        android:src="@drawable/dandd"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:onClick="onFooterButtonClick"
        android:textAlignment="textStart"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bcentral"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@android:drawable/ic_input_add" />

</androidx.constraintlayout.widget.ConstraintLayout>
